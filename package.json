{
  "name": "rschedule-monorepo",
  "private": true,
  "author": "John Carroll <john.carroll.p@gmail.com>",
  "license": "Unlicense",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "run-p build:*:*",
    "build:standard-date-adapter:main": "tsc -p packages/standard-date-adapter/tsconfig.json",
    "build:standard-date-adapter:module": "tsc -p packages/standard-date-adapter/tsconfig.module.json",
    "build:luxon-date-adapter:main": "tsc -p packages/luxon-date-adapter/tsconfig.json",
    "build:luxon-date-adapter:module": "tsc -p packages/luxon-date-adapter/tsconfig.module.json",
    "build:moment-date-adapter:main": "tsc -p packages/moment-date-adapter/tsconfig.json",
    "build:moment-date-adapter:module": "tsc -p packages/moment-date-adapter/tsconfig.module.json",
    "build:ical-tools:main": "tsc -p packages/ical-tools/tsconfig.json",
    "build:ical-tools:module": "tsc -p packages/ical-tools/tsconfig.module.json",
    "build:rschedule:main": "tsc -p packages/rschedule/tsconfig.json",
    "build:rschedule:module": "tsc -p packages/rschedule/tsconfig.module.json",
    "test": "jest --config './jest.config.json'",
    "test:watch": "jest --config './jest.config.json' --watch",
    "test:prod": "yarn lint && yarn test --coverage --no-cache",
    "format": "prettier-tslint fix packages/**/src/**/**/**/**/*.ts tests/**/**/**/**/**/*.ts",
    "clean:build": "trash packages/*/build",
    "clean:modules": "trash yarn.lock node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "@types/lodash.sorteduniq": "^4.2.4",
    "@types/lodash.uniq": "^4.5.4",
    "@types/lodash.uniqwith": "^4.5.4",
    "@types/lodash.clonedeep": "^4.5.4",
    "@types/luxon": "^1.2.2",
    "@types/moment": "^2.13.0",
    "@types/moment-timezone": "^0.5.7",
    "@types/node": "^10.0.3",
    "date-fns": "^1.29.0",
    "jest": "^22.0.2",
    "lerna": "^3.0.1",
    "luxon": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "moment": "^2.0.0",
    "moment-timezone": "^0.5.21",
    "prettier": "^1.15.3",
    "prettier-tslint": "^0.4.1",
    "trash-cli": "^1.4.0",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.1"
  }
}
