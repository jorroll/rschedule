{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "outDir": "build/main",
    "rootDir": "src",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "paths": {},
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
